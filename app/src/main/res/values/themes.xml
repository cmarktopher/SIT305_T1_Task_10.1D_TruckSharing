<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TruckSharing" parent="Theme.MaterialComponents">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Some Universal styles so that I don't have to keep re-doing it in my XML -->
        <item name="android:colorBackground">@color/gray_00dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="materialButtonStyle">@style/Theme.TruckSharingMaterialButton</item>

        <!-- Elevation overlay-->
        <item name="elevationOverlayEnabled">true</item>

    </style>
</resources>